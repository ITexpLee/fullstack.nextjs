{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "../dist",
  },
  "exclude": [
    "../dist",
    "../server/**/*.*"
  ],
  "include": [
    "next-env.d.ts",
    "./*.ts",
    "./*.tsx"
  ]
}
